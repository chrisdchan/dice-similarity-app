<Window x:Class="Dice_Similarity_Coefficient.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dice_Similarity_Coefficient"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid Background="#272537">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" Width=".5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <Image x:Name="img1" Grid.Row="1" Grid.Column="1" Margin="2" ></Image>
        <Image x:Name="img2" Grid.Row="1" Grid.Column="2" Margin="2"></Image>

        <StackPanel Grid.Row="0" Grid.Column="0"
                    Grid.RowSpan="3" Background="#A7A7A7">

            <Label>Label Color: </Label>
            <Rectangle x:Name="Rect_color" Width="10" Height="10"></Rectangle>
        </StackPanel>
        
    </Grid>

</Window>
